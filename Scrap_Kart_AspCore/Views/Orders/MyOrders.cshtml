@model IEnumerable<Scrap_Kart_AspCore.Models.Order>

@{
    ViewData["Title"] = "MyOrders";
}
<div class="container d-xl-flex align-items-xl-end" style="margin-top: 20px;">
    <h4 class="text-warning flex-fill">My Orders</h4>
</div>
<hr />
<div class="container" style="margin-top: 20px;">


    @foreach (Order item in Model)
    {

        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0">Order Date - @Html.DisplayFor(modelItem => item.OrderDate.Date)  ||  Bill Amount - @Html.DisplayFor(modelItem => item.BillAmount)</h5>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total Price</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrderInfo orderInfo in item.OrderInfos)
                        {
                            <tr>
                                <td>@orderInfo.ProductName</td>
                                <td>@orderInfo.Price</td>
                                <td>@orderInfo.OrderedQuantity</td>
                                <td>@orderInfo.TotalPrice</td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>




    }








    
</div>


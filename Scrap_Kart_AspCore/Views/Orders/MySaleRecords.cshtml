@model IEnumerable<Scrap_Kart_AspCore.Models.OrderInfo>

@{

    ViewData["Title"] = "MySaleRecords";
    string OID = ViewBag.OID;
}


<div class="container d-xl-flex align-items-xl-end" style="margin-top: 20px;">
    <h4 class="text-warning flex-fill">My Sale Records</h4>
   
</div>
<hr />

<div class="container" style="margin-top: 20px;">
    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="mb-0">Item List</h5>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width:100px">
                        OID
                    </th>
                    <th>
                        ProductName
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        TotalPrice
                    </th>

                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (OID != item.OID.ToString())
                    {
                        OID = item.OID.ToString();
                        <tr><td colspan="10" class="table-secondary"></td></tr>
                    }
            <tr>
                <td>
                    @item.OID
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.OrderedQuantity
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.TotalPrice
                </td>

                <td>
                </td>
            </tr>

                }
            </tbody>
        </table>
    </div>
</div>  




